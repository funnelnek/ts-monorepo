    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Host Application",
            "request": "launch",
            "type": "node",
            "runtimeArgs": [
              "--loader",
              "ts-node/esm",
              "-r",
              "tsconfig-paths/register"
            ],
            "args": ["${workspaceFolder}/src/index.ts"],
            "cwd": "${workspaceFolder}",
            "env": {
              "NODE_ENV": "development",
              "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            }
          }
    ]
}