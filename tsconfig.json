{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "paths": {
      "@funnelnek/i18n": [
        "libs/i18n/src/*",
        "libs/i18n/src/index.ts"
      ],
      "@funnelnek/lang-translator": [
        "apps/lang-translator/src/*",
        "apps/lang-translator/src/index.ts"
      ],
      "@funnelnek/ui": [
        "libs/ui/src/*",
        "libs/ui/src/index.ts"
      ]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": true
  }
}
